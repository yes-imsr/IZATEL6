<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="PMMOEdit.DataPage">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Data Management" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       Margin="0,0,0,20"/>
            
            <TextBlock Text="This page allows you to manage data for your PMMO configuration."
                       Margin="0,0,0,20"/>
                       
            <!-- Datapack Management Section -->
            <Border Background="#F0F8FF" 
                    CornerRadius="5" 
                    Padding="15" 
                    Margin="0,10,0,20">
                <StackPanel>
                    <TextBlock Text="Datapack Management" 
                               FontWeight="Bold" 
                               FontSize="18"
                               Margin="0,0,0,10"/>
                    <TextBlock Text="Create and manage Minecraft datapacks for custom PMMO configurations."
                               TextWrapping="Wrap"
                               Margin="0,0,0,15"/>
                    <Button Content="Create New Datapack" 
                            Name="CreateDatapackButton"
                            Padding="10,5"
                            Background="#4CAF50"
                            Foreground="White"
                            Margin="0,5,0,10"/>
                </StackPanel>
            </Border>
                       
            <!-- Original Data Options Section -->
            <Border Background="#F5F5F5" 
                    CornerRadius="5" 
                    Padding="15" 
                    Margin="0,10,0,0">
                <StackPanel>
                    <TextBlock Text="Data Options" 
                               FontWeight="Bold" 
                               Margin="0,0,0,10"/>
                    <!-- Example controls - replace with actual data-related controls -->
                    <Button Content="Import Data" 
                            Margin="0,5,0,5"/>
                    <Button Content="Export Data" 
                            Margin="0,5,0,5"/>
                    <Button Content="Reset Data" 
                            Margin="0,5,0,5"/>
                </StackPanel>
            </Border>
        </StackPanel>
    </Grid>
</UserControl>
