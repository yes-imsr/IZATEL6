<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:controls="using:Avalonia.Controls"
             xmlns:avalonia="clr-namespace:Avalonia;assembly=Avalonia.Controls"
             xmlns:xml="http://www.w3.org/XML/1998/namespace"
             mc:Ignorable="d" d:DesignWidth="1000" d:DesignHeight="700"
             x:Class="PMMOEdit.LootTableEditor">
    <UserControl.Styles>
        <Style Selector="TreeViewItem">
            <Setter Property="Foreground" Value="White"/>
        </Style>
        <!-- This style targets the header presenter of TreeViewItems -->
        <Style Selector="TreeViewItem /template/ ContentPresenter#PART_HeaderPresenter">
            <Setter Property="Foreground" Value="White"/>
        </Style>
    </UserControl.Styles>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Top Bar with Title and Help Button -->
        <Grid Grid.Row="0" Background="Black" Height="60">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <TextBlock Grid.Column="0" 
                     Text="Loot Table Editor" 
                     FontSize="22" 
                     FontWeight="Bold" 
                     Foreground="White"
                     Margin="20,0,0,0"
                     VerticalAlignment="Center"/>
                     
            <Border Grid.Column="1" 
                    Background="#3498DB" 
                    CornerRadius="4" 
                    Margin="15,0,0,0" 
                    Padding="8,4">
                <TextBlock Name="DatapackNameDisplay" 
                         Text="" 
                         FontSize="16" 
                         FontWeight="Bold"
                         Foreground="White" 
                         VerticalAlignment="Center"/>
            </Border>
            
            <Button Grid.Column="3" Name="HelpButton" 
                    Content="Need Help?" 
                    Margin="0,0,20,0"
                    Padding="15,8"
                    Background="#3498DB"
                    Foreground="White"
                    CornerRadius="20"/>
        </Grid>
        
        <!-- Main Content Area -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="250"/>
            </Grid.ColumnDefinitions>
            
            <!-- Left Sidebar - Navigation and File Tree -->
            <Grid Grid.Column="0" Background="Black">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- Actions Panel -->
                <StackPanel Grid.Row="0" Margin="15,15,15,0">
                    <Button Content="+ New Loot Table" 
                            Name="NewLootTableButton"
                            HorizontalAlignment="Stretch"
                            HorizontalContentAlignment="Center"
                            Padding="10,8"
                            Margin="0,0,0,8"
                            Background="#27AE60"
                            Foreground="White"/>
                    
                    <ComboBox Name="LootTableTypeSelector" 
                              HorizontalAlignment="Stretch" 
                              Margin="0,10,0,15"
                              PlaceholderText="Select Type">
                        <ComboBoxItem>Entity Loot Tables</ComboBoxItem>
                        <ComboBoxItem>Chest Loot Tables</ComboBoxItem>
                        <ComboBoxItem>Block Loot Tables</ComboBoxItem>
                    </ComboBox>
                </StackPanel>
                
                <!-- File Tree -->
                <TreeView Grid.Row="1" Name="LootTableTreeView" 
                          Background="Black" 
                          Foreground="White"
                          FontWeight="Bold"
                          Margin="0,10,0,0">
                    <TreeView.Styles>
                        <Style Selector="TreeViewItem">
                            <Setter Property="Foreground" Value="White"/>
                        </Style>
                        <Style Selector="TreeViewItem TextBlock">
                            <Setter Property="Foreground" Value="White"/>
                        </Style>
                    </TreeView.Styles>
                    <TreeViewItem Header="Entity Loot Tables" IsExpanded="True" FontWeight="Bold" Foreground="White">
                        <TreeViewItem Header="zombie_example.json" FontWeight="Bold" Foreground="White"/>
                        <TreeViewItem Header="+ Add New..." FontWeight="Bold" Foreground="White"/>
                    </TreeViewItem>
                    <TreeViewItem Header="Chest Loot Tables" IsExpanded="True" FontWeight="Bold" Foreground="White">
                        <TreeViewItem Header="custom_dungeon.json" FontWeight="Bold" Foreground="White"/>
                        <TreeViewItem Header="+ Add New..." FontWeight="Bold" Foreground="White"/>
                    </TreeViewItem>
                    <TreeViewItem Header="Block Loot Tables" FontWeight="Bold" Foreground="White">
                        <TreeViewItem Header="+ Add New..." FontWeight="Bold" Foreground="White"/>
                    </TreeViewItem>
                </TreeView>
            </Grid>
            
            <!-- Main Editor Area -->
            <Border Grid.Column="1" 
                    Background="#ECF0F1" 
                    CornerRadius="15,15,0,0" 
                    ClipToBounds="True">
                <TabControl Name="EditorTabControl">
                    <TabControl.Styles>
                        <!-- Style for the TabControl itself -->
                        <Style Selector="TabControl">
                            <Setter Property="Padding" Value="0" />
                            <Setter Property="Background" Value="Transparent" />
                        </Style>
                        
                        <!-- Style for TabItems (the header part) -->
                        <Style Selector="TabItem">
                            <Setter Property="FontSize" Value="14" />
                            <Setter Property="Margin" Value="0,0,4,0" />
                            <Setter Property="Padding" Value="16,8" />
                            <Setter Property="Background" Value="#D9D9D9" />
                            <Setter Property="Foreground" Value="#555555" />
                            <Setter Property="CornerRadius" Value="8,8,0,0" />
                        </Style>
                        
                        <!-- Style for selected TabItem -->
                        <Style Selector="TabItem:selected">
                            <Setter Property="Background" Value="White" />
                            <Setter Property="Foreground" Value="#333333" />
                            <Setter Property="FontWeight" Value="SemiBold" />
                        </Style>
                        
                        <!-- Style for the TabItem header when pointerover -->
                        <Style Selector="TabItem:pointerover /template/ ContentPresenter#PART_ContentPresenter">
                            <Setter Property="Background" Value="#E8E8E8" />
                        </Style>
                        
                        <!-- Style for the TabItem header when selected -->
                        <Style Selector="TabItem:selected /template/ ContentPresenter#PART_ContentPresenter">
                            <Setter Property="Background" Value="White" />
                        </Style>
                        
                        <!-- Style for the content area -->
                        <Style Selector="TabControl /template/ ContentPresenter#PART_SelectedContentHost">
                            <Setter Property="Background" Value="White" />
                            <Setter Property="CornerRadius" Value="8,0,8,8" />
                            <Setter Property="BorderThickness" Value="1" />
                            <Setter Property="BorderBrush" Value="#DDDDDD" />
                        </Style>
                    </TabControl.Styles>
                    <!-- Visual Editor Tab -->
                    <TabItem Header="Visual Editor">
                        <ScrollViewer Background="White">
                            <StackPanel Margin="20">
                                <!-- Header Section -->
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <StackPanel Grid.Column="0">
                                        <TextBox Name="LootTableTitleTextBox" 
                                                 Text="zombie_example.json" 
                                                 FontSize="20" 
                                                 FontWeight="Bold"
                                                 Margin="0,0,0,5"/>
                                        
                                        <ComboBox Name="LootTableContextType"
                                                  SelectedIndex="0"
                                                  Width="200"
                                                  HorizontalAlignment="Left">
                                            <ComboBoxItem>minecraft:entity</ComboBoxItem>
                                            <ComboBoxItem>minecraft:chest</ComboBoxItem>
                                            <ComboBoxItem>minecraft:block</ComboBoxItem>
                                            <ComboBoxItem>minecraft:fishing</ComboBoxItem>
                                        </ComboBox>
                                    </StackPanel>
                                    
                                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                                        <Button Content="Save" 
                                                Name="SaveButton"
                                                Margin="5,0"
                                                Padding="15,8"
                                                Background="#27AE60"
                                                Foreground="White"/>
                                    </StackPanel>
                                </Grid>
                                
                                <Border Background="White" 
                                        Margin="0,20,0,20" 
                                        Padding="15" 
                                        CornerRadius="10,10,5,5"
                                        BorderBrush="#BDC3C7"
                                        BorderThickness="1"
                                        ClipToBounds="True"
                                        BoxShadow="0 2 4 0 #00000015">
                                    
                                    <StackPanel>
                                        <TextBlock Text="Loot Pool #1" 
                                                   FontSize="18" 
                                                   FontWeight="Bold"
                                                   Margin="0,0,0,15"/>
                                        
                                        <!-- Rolls Configuration -->
                                        <Grid Margin="0,0,0,15">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="100"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <TextBlock Grid.Column="0" 
                                                       Text="Rolls:" 
                                                       VerticalAlignment="Center"/>
                                            
                                            <Grid Grid.Column="1">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                
                                                <RadioButton Grid.Column="0" 
                                                             Name="RollsFixedRadio"
                                                             Content="Fixed" 
                                                             IsChecked="True"
                                                             GroupName="RollsType"
                                                             VerticalAlignment="Center"/>
                                                
                                                <NumericUpDown Grid.Column="1"
                                                              Value="1"
                                                              Minimum="1"
                                                              Maximum="100"
                                                              Width="150"
                                                              Margin="10,0,20,0"/>
                                                
                                                <RadioButton Grid.Column="2" 
                                                             Name="RollsRangeRadio"
                                                             Content="Range" 
                                                             GroupName="RollsType"
                                                             VerticalAlignment="Center"/>
                                                
                                                <StackPanel Grid.Column="3" Orientation="Horizontal" Margin="10,0,0,0">
                                                    <NumericUpDown Value="1"
                                                                  Minimum="0"
                                                                  Maximum="100"
                                                                  Width="120"
                                                                  IsEnabled="{Binding ElementName=RollsRangeRadio, Path=IsChecked}"/>
                                                    
                                                    <TextBlock Text=" to " VerticalAlignment="Center" Margin="5,0"/>
                                                    
                                                    <NumericUpDown Value="3"
                                                                  Minimum="1"
                                                                  Maximum="100"
                                                                  Width="120"
                                                                  IsEnabled="{Binding ElementName=RollsRangeRadio, Path=IsChecked}"/>
                                                </StackPanel>
                                            </Grid>
                                        </Grid>
                                        
                                        <!-- Entry Table -->
                                        <TextBlock Text="Loot Entries" 
                                                   FontWeight="Bold"
                                                   Margin="0,0,0,10"/>
                                        
                                        <Border BorderBrush="#E0E0E0" BorderThickness="1" Margin="0,0,0,15" CornerRadius="6" ClipToBounds="True">
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="*"/>
                                                </Grid.RowDefinitions>
                                                
                                                <!-- Table Header -->
                                                <Grid Grid.Row="0" Background="#F5F5F5">
                                                    <Grid.Styles>
                                                        <Style Selector="Grid">
                                                            <Setter Property="ClipToBounds" Value="True"/>
                                                        </Style>
                                                    </Grid.Styles>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="50"/>
                                                        <ColumnDefinition Width="200"/>
                                                        <ColumnDefinition Width="100"/>
                                                        <ColumnDefinition Width="100"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>
                                                    
                                                    <TextBlock Grid.Column="0" Text="#" Margin="10,8" FontWeight="Bold"/>
                                                    <TextBlock Grid.Column="1" Text="Item" Margin="10,8" FontWeight="Bold"/>
                                                    <TextBlock Grid.Column="2" Text="Weight" Margin="10,8" FontWeight="Bold"/>
                                                    <TextBlock Grid.Column="3" Text="Chance" Margin="10,8" FontWeight="Bold"/>
                                                    <TextBlock Grid.Column="4" Text="Functions" Margin="10,8" FontWeight="Bold"/>
                                                </Grid>
                                                
                                                <!-- Table Rows -->
                                                <StackPanel Grid.Row="1" Name="EntriesPanel">
                                                    <!-- Entry 1 -->
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="50"/>
                                                            <ColumnDefinition Width="200"/>
                                                            <ColumnDefinition Width="100"/>
                                                            <ColumnDefinition Width="100"/>
                                                            <ColumnDefinition Width="*"/>
                                                        </Grid.ColumnDefinitions>
                                                        
                                                        <TextBlock Grid.Column="0" Text="1" Margin="10,8"/>
                                                        <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="5">
                                                            <Border Width="32" Height="32" Background="#F7F7F7" BorderBrush="#CCCCCC" BorderThickness="1">
                                                                <TextBlock Text="RF" FontSize="12" HorizontalAlignment="Center" VerticalAlignment="Center" />
                                                            </Border>
                                                            <TextBlock Text="minecraft:rotten_flesh" VerticalAlignment="Center" Margin="5,0,0,0"/>
                                                        </StackPanel>
                                                        <TextBlock Grid.Column="2" Text="10" Margin="10,8"/>
                                                        <TextBlock Grid.Column="3" Text="67%" Margin="10,8" Foreground="#27AE60"/>
                                                        <StackPanel Grid.Column="4" Orientation="Horizontal" Margin="5">
                                                            <Button Content="Set Count" 
                                                                    Padding="5,2"
                                                                    Margin="0,0,5,0"
                                                                    Background="#E0E0E0"/>
                                                            <Button Content="Looting" 
                                                                    Padding="5,2"
                                                                    Background="#E0E0E0"/>
                                                        </StackPanel>
                                                    </Grid>
                                                    
                                                    <!-- Entry 2 -->
                                                    <Grid Background="#F9F9F9">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="50"/>
                                                            <ColumnDefinition Width="200"/>
                                                            <ColumnDefinition Width="100"/>
                                                            <ColumnDefinition Width="100"/>
                                                            <ColumnDefinition Width="*"/>
                                                        </Grid.ColumnDefinitions>
                                                        
                                                        <TextBlock Grid.Column="0" Text="2" Margin="10,8"/>
                                                        <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="5">
                                                            <Border Width="32" Height="32" Background="#F7F7F7" BorderBrush="#CCCCCC" BorderThickness="1">
                                                                <TextBlock Text="Fe" FontSize="12" HorizontalAlignment="Center" VerticalAlignment="Center" />
                                                            </Border>
                                                            <TextBlock Text="minecraft:iron_ingot" VerticalAlignment="Center" Margin="5,0,0,0"/>
                                                        </StackPanel>
                                                        <TextBlock Grid.Column="2" Text="1" Margin="10,8"/>
                                                        <TextBlock Grid.Column="3" Text="7%" Margin="10,8" Foreground="#E74C3C"/>
                                                        <StackPanel Grid.Column="4" Orientation="Horizontal" Margin="5">
                                                            <Button Content="Random Chance" 
                                                                    Padding="5,2"
                                                                    Background="#E0E0E0"/>
                                                        </StackPanel>
                                                    </Grid>
                                                    
                                                    <!-- Entry 3 -->
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="50"/>
                                                            <ColumnDefinition Width="200"/>
                                                            <ColumnDefinition Width="100"/>
                                                            <ColumnDefinition Width="100"/>
                                                            <ColumnDefinition Width="*"/>
                                                        </Grid.ColumnDefinitions>
                                                        
                                                        <TextBlock Grid.Column="0" Text="3" Margin="10,8"/>
                                                        <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="5">
                                                            <Border Width="32" Height="32" Background="#F7F7F7" BorderBrush="#CCCCCC" BorderThickness="1">
                                                                <TextBlock Text="Em" FontSize="12" HorizontalAlignment="Center" VerticalAlignment="Center" />
                                                            </Border>
                                                            <TextBlock Text="minecraft:emerald" VerticalAlignment="Center" Margin="5,0,0,0"/>
                                                        </StackPanel>
                                                        <TextBlock Grid.Column="2" Text="4" Margin="10,8"/>
                                                        <TextBlock Grid.Column="3" Text="26%" Margin="10,8" Foreground="#F39C12"/>
                                                        <TextBlock Grid.Column="4" Text="None" Margin="10,8" Foreground="#7F8C8D"/>
                                                    </Grid>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                        
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                            <Button Content="Add Item" 
                                                    Name="AddItemButton"
                                                    Margin="5,0"
                                                    Padding="10,5"
                                                    Background="#3498DB"
                                                    Foreground="White"/>
                                            
                                            <Button Content="Add Empty" 
                                                    Name="AddEmptyButton"
                                                    Margin="5,0"
                                                    Padding="10,5"
                                                    Background="#95A5A6"
                                                    Foreground="White"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Border>
                                
                                <!-- Add Pool Button -->
                                <Button Content="+ Add Another Loot Pool" 
                                        Name="AddLootPoolButton"
                                        HorizontalAlignment="Center"
                                        Margin="0,10,0,20"
                                        Padding="15,8"
                                        Background="#7F8C8D"
                                        Foreground="White"/>
                                
                                <!-- Loot Table Visualization -->
                                <Border Background="White" 
                                        Margin="0,0,0,20" 
                                        Padding="15" 
                                        CornerRadius="10,10,5,5"
                                        BorderBrush="#BDC3C7"
                                        BorderThickness="1"
                                        ClipToBounds="True"
                                        BoxShadow="0 2 4 0 #00000015">
                                    <StackPanel>
                                        <TextBlock Text="Loot Probability Visualization" 
                                                   FontSize="18" 
                                                   FontWeight="Bold"
                                                   Margin="0,0,0,15"/>
                                        
                                        <Grid Height="30" Margin="0,10,0,5">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="4*"/>
                                                <ColumnDefinition Width="2*"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <Rectangle Grid.Column="0" Fill="#27AE60"/>
                                            <Rectangle Grid.Column="1" Fill="#F39C12"/>
                                            <Rectangle Grid.Column="2" Fill="#E74C3C"/>
                                        </Grid>
                                        
                                        <Grid Margin="0,0,0,10">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="4*"/>
                                                <ColumnDefinition Width="2*"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <TextBlock Grid.Column="0" Text="Rotten Flesh (67%)" HorizontalAlignment="Center"/>
                                            <TextBlock Grid.Column="1" Text="Emerald (26%)" HorizontalAlignment="Center"/>
                                            <TextBlock Grid.Column="2" Text="Iron (7%)" HorizontalAlignment="Center"/>
                                        </Grid>
                                        
                                        <TextBlock Name="AverageItemsText" Text="Average items per kill: 1.0" Margin="0,20,0,0"/>
                                        <TextBlock Text="Chance of at least one item: 100%" Margin="0,5,0,0"/>
                                        <TextBlock Text="Chance of rare item (iron): 7%" Margin="0,5,0,0"/>
                                    </StackPanel>
                                </Border>
                                
                                <!-- Roll History has been moved to the right panel -->
                            </StackPanel>
                        </ScrollViewer>
                    </TabItem>
                    
                    <!-- JSON Editor Tab -->
                    <TabItem Header="JSON Editor">
                        <Grid Margin="10" Background="White">
                            <TextBox Name="JsonEditor"
                                     AcceptsReturn="True"
                                     AcceptsTab="True"
                                     FontFamily="Consolas, Monospace"
                                     FontSize="13"
                                     TextWrapping="NoWrap"
                                     ScrollViewer.HorizontalScrollBarVisibility="Auto"
                                     ScrollViewer.VerticalScrollBarVisibility="Visible"
                                     Padding="12"
                                     LineHeight="20">
                            {
                              "type": "minecraft:entity",
                              "pools": [
                                {
                                  "rolls": 1,
                                  "entries": [
                                    {
                                      "type": "minecraft:item",
                                      "name": "minecraft:rotten_flesh",
                                      "weight": 10,
                                      "functions": [
                                        {
                                          "function": "minecraft:set_count",
                                          "count": {
                                            "min": 0,
                                            "max": 2,
                                            "type": "minecraft:uniform"
                                          }
                                        },
                                        {
                                          "function": "minecraft:looting_enchant",
                                          "count": {
                                            "min": 0,
                                            "max": 1
                                          }
                                        }
                                      ]
                                    },
                                    {
                                      "type": "minecraft:item",
                                      "name": "minecraft:iron_ingot",
                                      "weight": 1,
                                      "conditions": [
                                        {
                                          "condition": "minecraft:random_chance_with_looting",
                                          "chance": 0.025,
                                          "looting_multiplier": 0.01
                                        }
                                      ]
                                    },
                                    {
                                      "type": "minecraft:item",
                                      "name": "minecraft:emerald",
                                      "weight": 4
                                    }
                                  ]
                                }
                              ]
                            }
                            </TextBox>
                        </Grid>
                    </TabItem>
                </TabControl>
                            </Border>
            
            <!-- Right Sidebar - Roll History -->
            <Grid Grid.Column="2" Background="#2C3E50">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- Roll History Header -->
                <StackPanel Grid.Row="0" Margin="15,20,15,10">
                    <TextBlock Text="Roll History" 
                              FontSize="18" 
                              FontWeight="Bold"
                              Foreground="White"
                              Margin="0,0,0,10"/>
                    
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="10" Margin="0,5,0,10">
                        <Button Content="Roll" 
                                Name="RollButton"
                                Padding="15,8"
                                Background="#9B59B6"
                                Foreground="White"
                                Width="100"/>
                        
                        <Button Content="Reset" 
                                Name="ResetHistoryButton"
                                Padding="10,8"
                                Background="#E74C3C"
                                Foreground="White"
                                Width="100"/>
                    </StackPanel>
                </StackPanel>
                
                <!-- Roll History Content -->
                <Border Grid.Row="1" 
                        Background="#34495E" 
                        Margin="15,0,15,15" 
                        CornerRadius="5"
                        BorderBrush="#566573"
                        BorderThickness="1">
                    <ScrollViewer Margin="10">
                        <StackPanel>
                            <TextBlock Text="Item rarity indicators:" 
                                      Foreground="#BDC3C7"
                                      FontSize="12"
                                      Margin="5,5,5,10"/>
                            
                            <StackPanel Orientation="Horizontal" 
                                       Margin="5,0,5,10" 
                                       Spacing="10">
                                <TextBlock Text="◆ Common" Foreground="#27AE60" FontSize="12"/>
                                <TextBlock Text="★ Uncommon" Foreground="#F39C12" FontSize="12"/>
                                <TextBlock Text="✧ Rare" Foreground="#E74C3C" FontSize="12"/>
                                <TextBlock Text="⭐ Epic" Foreground="#9B59B6" FontSize="12"/>
                            </StackPanel>
                            
                            <Border BorderBrush="#566573" 
                                   BorderThickness="0,1,0,0" 
                                   Margin="0,0,0,10"/>
                            
                            <TextBlock Name="RollHistoryTextBlock" 
                                      Foreground="White" 
                                      Text="No rolls yet. Click the Roll button to start!" 
                                      TextWrapping="Wrap"
                                      Margin="5"
                                      FontSize="14"
                                      LineHeight="24"/>
                        </StackPanel>
                    </ScrollViewer>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
